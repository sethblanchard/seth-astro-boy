---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import {stories} from "../data/stories.json"
import { Scene } from "../components/Computer"
// const stories = [
//     // ... (keep the entire stories array as is)
// ];

const linkStyle = {
    textDecoration: "none",
    borderBottom: "dotted 1px",
    flexShrink: 1
};

const spacerChar = "◇";
---

<Layout>
	<div class="topper">
		<div class="box">
		  <img class="profile" src="data:image/png;base64, " />
		</div>
		<h1 class="hero-text">
		  <span>S</span>
		  <span>e</span>
		  <span>t</span>
		  <span>h</span>
		  <br />
		  <span>B</span>
		  <span>l</span>
		  <span>a</span>
		  <span>n</span>
		  <span>c</span>
		  <span>h</span>
		  <span>a</span>
		  <span>r</span>
		  <span>d</span>
		</h1>
		</div>
		<h1 style="display:none;">◇</h1>
		<div class="projects mt2">
		   <h2 class="projects-header">About</h2>
		  <p>Seth is an engineer, director and journalist with 15+ years experience creating award winning web interactives and impactful products. Currently, he works as a Staff Engineer at Medallia, leading a team focused on new generative AI products. He thrives when applying his technical expertise at the intersection of emerging technologies and user experience.</p>
		</div>
		<div class="projects">
		  <div class="project-list">
			<h2 class="projects-header">Projects</h2>
			<div class="mt3">
			{stories.map((storyData, index) => (
                <>
                    <div class="project-list-item f3">
                        <a 
                            href={`./${storyData.link}`}
                            style={{
								display:"inlineBlock",
                                color: "#e9585d",
                                borderBottom: "1px dotted",
                                cursor: "pointer",
                                textDecoration: "none",
                            }}
                        >
                            {storyData.short_title}
                        </a>
                    </div>
                </>
            ))}
			</div>
		  </div>
		  <div class="project-preview">
		  </div>
		</div>
		<div style="width:750px; height:750px;">
			<Scene  client:only="react" />
		</div>
		<footer class="footer">
		 ↑ up | down ↓ | select ⏎  
		</footer>
</Layout>